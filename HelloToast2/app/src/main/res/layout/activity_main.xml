<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    mastan:layout_height="match_parent"
    mastan:layout_width="match_parent"
    mastan:orientation="vertical"
    xmlns:mastan="http://schemas.android.com/apk/res/android">

    <Button
        mastan:layout_width="match_parent"
        mastan:layout_height="0dp"
        mastan:layout_weight="1"
        mastan:text="Toast"
        mastan:textSize="25sp"
        mastan:background="#072378"
        mastan:textColor="#FFFFFF"
        mastan:textStyle="bold"
        mastan:onClick="displayToast"
        />

    <TextView
        mastan:layout_width="match_parent"
        mastan:layout_height="0dp"
        mastan:layout_weight="8"
        mastan:text="0"
        mastan:textSize="150sp"
        mastan:gravity="center"
        mastan:background="#EFFF1F"
        mastan:textColor="#000"
        mastan:textStyle="bold"
        mastan:id="@+id/textview"
        />

    <Button
        mastan:layout_width="match_parent"
        mastan:layout_height="0dp"
        mastan:layout_weight="1"
        mastan:text="Count"
        mastan:textSize="25sp"
        mastan:background="#072378"
        mastan:textColor="#FFFFFF"
        mastan:textStyle="bold"
        mastan:id="@+id/countButton"
        />

</LinearLayout>